/* components/video/video.wxss */
.container {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
}
.video-container {
  position: relative;
}

.cover {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
.video-container text {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  color: #fff;
  background: rgba(0, 0, 0, .2);
  padding: 4rpx;
  border-radius: 2px;
}
.detail {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;

}
.detail-left {
  display: flex;
  flex-direction: row;
}
.author-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50px;
  margin-right: 10rpx;
}
.text-container {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.info {
  color: #ccc;
  font-size: 24rpx;
}
.info text {
  margin-right: 10rpx;
}