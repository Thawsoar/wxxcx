<wxs module="m1">
  function formatIndex(index) {
   return index < 10 ? '0' + index : index
  }
  module.exports.formatIndex = formatIndex
</wxs>
<view class='container'>
  <view class="header">
    <v-episode class="epsoide" index="{{m1.formatIndex(classic.index)}}">
      <text class='plain' slot="before">NO.</text>
    </v-episode>
    <v-like class="like" bind:like="onLike" like="{{likeStatus}}" count="{{likeNums}}"/>
  </view>
  <v-movie hidden="{{classic.type != 100}}" img="{{classic.image}}"  content="{{classic.content}}" />
  <v-music wx:if="{{classic.type == 200}}" src="{{classic.url}}" img="{{classic.image}}" title="{{classic.title}}"  content="{{classic.content}}" />
  <v-essay hidden="{{classic.type != 300}}" img="{{classic.image}}"  content="{{classic.content}}" />


  <v-navi 
    class="navi" 
    bind:left="onNext" 
    bind:right="onPrevious"
    first="{{first}}" 
    latest="{{latest}}" 
    title="{{classic.title}}" />
</view>