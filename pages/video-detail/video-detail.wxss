/* pages/video-detail/video-detail.wxss */
page {
  overflow-y: none;
  height: 100%;
}
.page-section {
  height: 400rpx;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 9999999
}
.page-section #myVideo {
  width: 100%;
  height: 400rpx;
  position: fixed;
  top: 0
}
.page-section .cover {
  /* position: fixed;
  top: 0;
  height: 400rpx; */
  width: 100%;
}
.player-img {
  width: 100rpx;
  height: 100rpx;
  position:fixed;
  top: 200rpx;
  left: 50%;
  margin-top: -50rpx;
  margin-left: -50rpx;
}
.main {
  box-sizing: border-box;
  height: 70vh;
  position: fixed;
  bottom: 0;
  padding-top: 20rpx;
}
.title-box {
  background: #fff;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  z-index: 99;
  margin-top: 20rpx;
}
.title-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.detail-left {
  display: flex;
  flex-direction: row;
}
.author-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50px;
  margin-right: 10rpx;
}
.text-container {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.text-container .title {
  max-width: 440rpx;
}
.info {
  color: #ccc;
  font-size: 24rpx;
}
.info text {
  margin-right: 10rpx;
}
.description {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  /* margin-top: 20rpx; */
}
.description text {
  font-size: 28rpx;
  color: #4a4a4a;
}
.description .tags {
  margin-top: 20rpx;
}
.description .v-tag {
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  display: inline-block
}

.share-btn {
  margin-top: 30rpx;
  margin-left: 10rpx;
}
.share-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
  

.share {
  width: 60rpx;
  height: 60rpx;
   
}

