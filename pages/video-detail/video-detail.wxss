/* pages/video-detail/video-detail.wxss */
.page-body {
  display: flex;
  flex-direction: column;
}
.page-section {
  height: 400rpx;
  width: 100%;
  position: relative;
}
.page-section video {
  width: 100%;
  height: 400rpx;
  position: fixed;
  top: 0;
  z-index: 1
}
.cover {
  position: fixed;
  top: 0;
  height: 400rpx;
  width: 100%;
  z-index: 99
}
.player-img {
  width: 100rpx;
  height: 100rpx;
  z-index:999999;
  position:fixed;
  top: 200rpx;
  left: 50%;
  margin-top: -50rpx;
  margin-left: -50rpx;
}
.title-box {
  background: #fff;
  position: fixed;
  top: 400rpx;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
   z-index: 99;
}
.title-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 20rpx;
}
.detail-left {
  display: flex;
  flex-direction: row;
}
.author-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50px;
  margin-right: 10rpx;
}
.text-container {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.info {
  color: #ccc;
  font-size: 24rpx;
}
.info text {
  margin-right: 10rpx;
}
.description {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  margin-top: 120rpx;
}
.description text {
  font-size: 28rpx;
  color: #4a4a4a;
}
.description .tags {
  margin-top: 20rpx;
}
.description v-tag {
  margin-right: 15rpx;
}